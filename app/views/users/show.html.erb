<% content_for :header do %>
  <h1>Account Settings</h1>
<% end %>

<% content_for :vertical_nav do %>
  <ul class="nav flex-column">
    <li class="nav-item mb-3">
      <%= button_to "Back to All Bookshelves", user_bookshelves_path(@user), :method => "get", class: "btn btn-info btn-block" %>
    </li>
  </ul>
<% end %>

<% content_for :content do %>
  <strong>Email:</strong> <%= @user.email %><br>
  <strong>Username:</strong> <%= @user.username %><br>
<% end %>

<% content_for :sidebar do %>
  <%= button_to "Logout", logout_path, :method => "delete", class: "btn btn-danger btn-block" %>
<% end %>