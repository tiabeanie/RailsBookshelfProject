<table class="table table-striped table-hover table-light">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Author</th>
    </tr>
  </thead>
  <tbody>
    <% @books.sort.each do |book| %>
      <tr>
        <th scope="row"><%= link_to book.title, book_path(book) %></th>
        <td><%= book.author.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>