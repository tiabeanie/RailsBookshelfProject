<% if @book.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <ul>
    <% @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(book) do |f| %>
  <strong><%= f.label :title %></strong>
  <%= f.text_field :title, class:"form-control" %><br>

  <strong><%= f.label "Description" %></strong>
  <%= f.text_area :description, class:"form-control" %><br>

  <div class="form-group">
    <strong><%= f.label :author %></strong><br>
    <%= f.collection_select :author_id, (Author.all), :id, :name, :include_blank => true%> or new:
    <%= f.fields_for :author_attributes do |author_fields| %>
      <%= author_fields.text_field :name %>
    <% end %>
  </div>

  <div class="form-group">
    <strong><%= f.label :genre %></strong><br>
    <%= f.collection_check_boxes(:genre_ids, (Genre.all), :id, :name) do |genre| %>
      <div class="form-check form-check-inline">
        <%= genre.check_box(class: "form-check-input") %>
      </div>
    <% end %>
    or new:
    <%= f.fields_for :genres, book.genres.build do |genre_fields| %>
      <%= genre_fields.text_field :name %>
    <% end %>
  </div>

  <%= f.hidden_field :created_by, value: current_user.id %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>