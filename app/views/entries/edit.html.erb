<% content_for :header do %>
  <h1>Edit <%= @entry.book.title %> on '<%= @entry.bookshelf.name %>' Bookshelf</h1>
<% end %>

<% content_for :vertical_nav do %>
  <ul class="nav flex-column">
    <li class="nav-item mb-3">
      <%= button_to "Back to #{@entry.book.title}", book_path(@entry.book), :method => "get", class: "btn btn-info btn-block" %>
    </li>
  </ul>
<% end %>

<% content_for :content do %>
  <%= render partial: "form", locals: {entry: @entry, book: @entry.book} %>
<% end %>